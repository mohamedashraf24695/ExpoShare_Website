<div class="row" style="padding-top: 50px;">
  <div class="col s12 m8">
    <h3>{{story.title}}
      <small>{{{editIcon story.user user story._id false}}}</small>
    </h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate story.createdAt 'Do MMMM YYYY , h:mm a'}}</span> 
        <span class="card-title">The Stroy is {{story.status}}</span> 
        <h6>{{{story.body}}}</h6>

      </div>
    </div>


<!-- aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa --> 

<div>
   <div  >
     <h5>Comments:</h5>
</div>

</div>

{{#each comments}} 


 <div class="card story"  >
      <div
        style= "position: absolute;
      left :92% ;"
      >
        
        <form action="/comments/{{_id}}" method="POST" id="delete-form">
          <input type="hidden" name="_method" value="DELETE" />

          <button type="submit" class="btn red">
            <i class="fas fa-trash">

            </i>
          </button>

        </form>
      </div>

      <div class="card-content" >
        <div class="card-content" style="background-color: #F9A825;">
          <span class="card-title">{{user.displayName}}</span>
          <img src="{{user.image}}" class="circle responsive-img img" />
                  <p> {{{body}}}</p>   
        </div>

      </div>

    </div>





{{else}}

    <h5>No comments to show</h5>

{{/each}}
























    <h5>Share your comment </h5>

    <div class="row">
      <form action="/comments/add/{{story._id}}" method="POST" class="col s12">

        <div class="row">
          <div class="input-field">
            <select id="status" name="status">
              <option value="public" selected>Public</option>
              <option value="ASnonymous ">Anonymous </option>
            </select>
            <label for="status">Status</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
            <textarea id="body" name="body"></textarea>
          </div>
        </div>

        <div class="row">
          <input type="submit" value="Comment" class="btn" />
        
        </div>
      </form>
    </div>

  </div>











{{#if story.isAnon}}
<div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">Anonymous User</span>
        <img
          src="/AnonUser.jpg"
          class="circle responsive-img img-small"
        />
      </div>
    </div>
  </div>
{{else}}


  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.displayName}}</span>
        <img
          src="{{story.user.image}}"
          class="circle responsive-img img-small"
        />
      </div>
      <div class="card-action">
        <a href="/stories/user/{{story.user._id}}">More From
          {{story.user.firstName}}</a>
      </div>
    </div>
  </div>

{{/if}}

















</div>